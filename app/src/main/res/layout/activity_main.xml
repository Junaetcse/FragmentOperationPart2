<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Pager Fragment"
        android:id="@+id/viewPager"
        android:textColor="#000000"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text Tab Fragment"
       android:onClick="textTab"
        android:textColor="#000000"
        android:layout_marginTop="25sp"
        />


    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Icon Tab Fragment"
    android:onClick="iconTab"
        android:textColor="#000000"
    android:id="@+id/iconTab"
    android:layout_marginTop="25sp"
    />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scroll Tab Fragment"
        android:onClick="scrollTab"
        android:id="@+id/scrollTab"
        android:textColor="#000000"
        android:layout_marginTop="25sp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom View Tab Fragment"
        android:onClick="customTab"
        android:id="@+id/customTab"
        android:layout_marginTop="25sp"
        />
</LinearLayout>
